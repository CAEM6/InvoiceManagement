@model InvoiceManagement.Models.Account

@{
    Layout = null;
}


@using (Ajax.BeginForm("Edit", "Accounts", new AjaxOptions { HttpMethod = "POST", OnSuccess = "GetResponse(data)" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="card">
        <div class="card-header pb-0">
            <h4>Cuenta</h4>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label pt-0" })
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label pt-0" })
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-success" type="submit" value="Save">Guardar</button>
            <button class="btn btn-warning" type="reset">Cancelar</button>
            <button class="btn btn-primary" type="button" onclick="GetView('@Url.Action("Index", "Accounts")', 'main-container')">Listado</button>
        </div>
    </div>
}